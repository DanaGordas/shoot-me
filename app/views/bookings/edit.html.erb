<div class="show_display">
 <div class="d-flex justify-content-center">

  <div class="border rounded p-4 mt-3 ">
      <h2 class="my-3"><%= @location.name %></h2>
      <p><%= @location.description %></p>
      <div class="border-top border-body-color">
        <p class ="mt-3"><strong>Host: </strong> <%= @location.user.first_name %></p>
        <p><strong>Address: </strong> <%= @location.address %></p>
        <p><strong> Dates: </strong><%= @booking.start_date %> - <%= @booking.end_date  %></p>
        <p><strong>Total price: </strong> â‚¬ <%= @booking.total_price%></p>
      </div>
      <br>
      <h2>Change dates</h2>
      <div class="container mt-3">
        <%= simple_form_for [ @booking ] do |f| %>
          <div class= "form-group">
            <%= f.input :start_date, class: "form-control" %>
            <%= f.input :end_date, class: "form-control" %>
            <%= f.submit "Request changes", data: { confirm: "Are you sure you want to make this change?" }, class: "form-control btn btn-info" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
