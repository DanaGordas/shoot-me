<div class="show_display">
    <div class="row">

    <div class="col-12 col-lg-8">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% if @location.photos.attached? %>
            <div class="carousel-item">
              <%= cl_image_tag @location.photos[0].key, width: 700, height:600, crop: :scale, class: "d-block w-100 pt-3" %>
            </div>
            <div class="carousel-item active">
              <%= cl_image_tag @location.photos[1].key, width: 700, height:600, crop: :scale, class: "d-block w-100 pt-3" %>
            </div>
          <% else %>
            <div class="carousel-item">
              <%= image_tag "https://images.unsplash.com/photo-1464890100898-a385f744067f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", class: "d-block w-100 pt-3" %>
            </div>
            <div class="carousel-item active">
              <%= image_tag "https://images.unsplash.com/photo-1529408632839-a54952c491e5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", class: "d-block w-100 pt-3" %>
            </div>
          <% end %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div class="col-12 col-lg-4 border rounded mt-3 pt-4" style="margin-bottom: 0px">
        <h2 class="my-3"><%= @location.name %></h2>
        <p><%= @location.description %></p>
        <div class="border-top border-body-color">
          <p class ="mt-3"><strong>Host: </strong> <%= @location.user.first_name %></p>
          <p><strong>Address: </strong> <%= @location.address %></p>
          <p><strong> Dates: </strong><%= @booking.start_date %> - <%= @booking.end_date  %></p>
          <p><strong>Total price: </strong> â‚¬ <%= @booking.total_price%></p>
        </div>
        <br>
        <div class="d-flex justify-content-center ">
          <%= link_to "<i class='fas fa-trash-alt'></i>".html_safe, booking_path(@booking), method: :delete, alert: 'text', style: "color: #FFD64B; font-size: 30px", class: "p-3" %>
          <%= link_to "<i class='fas fa-edit'></i>".html_safe, edit_booking_path(@booking), style: "color: #FFD64B; font-size: 30px", class: "p-3" %>
        </div>
        <br>
        <%= link_to "<i class='fas fa-chevron-left'></i>".html_safe, bookings_path,  style: "color: #FFD64B; font-size: 30px" %>
    </div>
  </div>
</div>
