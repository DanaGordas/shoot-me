<div class="show_display">
    <div class="row">

    <div class="col-12 col-lg-8">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% if @location.photos.attached? %>
            <div class="carousel-item">
              <%= cl_image_tag @location.photos[0].key, width: 700, height:600, crop: :scale, class: "d-block w-100 pt-3" %>
            </div>
            <div class="carousel-item active">
              <%= cl_image_tag @location.photos[1].key, width: 700, height:600, crop: :scale, class: "d-block w-100 pt-3" %>
            </div>
          <% else %>
            <div class="carousel-item">
              <%= image_tag "https://images.unsplash.com/photo-1464890100898-a385f744067f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", class: "d-block w-100 pt-3" %>
            </div>
            <div class="carousel-item active">
              <%= image_tag "https://images.unsplash.com/photo-1529408632839-a54952c491e5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", class: "d-block w-100 pt-3" %>
            </div>
          <% end %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div class="col-12 col-lg-4 border rounded p-4 pb mt-3">
      <ul>
        <li><h1 class="my-4"><%= @location.name %></h1></li>
        <span class="border-bottom"></span>
        <li><p><%= @location.description %></p></li>
        <li><p><strong>Hosted by</strong> <%= @location.user.first_name %></p></li>
        <br>
        <li><p>Address:<%= @location.address %></p></li>
        <li><p>Booked from: <strong><%= @booking.start_date %></strong></p></li>
        <li>until <strong><%= @booking.end_date %></strong></li>
        <br>
        <li><p>Total price: <strong>â‚¬<%= @booking.total_price%></strong></p></li>
        <li><%= link_to "Cancel booking", booking_path(@booking), method: :delete, data: { confirm: "Are you sure you want to cancel this booking?" }, class: "btn btn-info"  %></li>
        <br>
        <li><%= link_to "Edit dates", edit_booking_path(@booking), class: "btn btn-info"  %></li>
        <br>
        <br>
        <li><%= link_to "Back to bookings", bookings_path,  class: "btn btn-light"  %></li>
      </ul>
    </div>
  </div>
</div>
