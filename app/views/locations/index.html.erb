<div class="container">

  <div class="row">

    <div class="col-12 col-lg-6">
        <% @locations.each do |location| %>
          <div class="card-trip mt-3">
            <% if location.photos.attached? %>
              <%= cl_image_tag location.photos[0].key %>
            <% else %>
              <img src="https://images.unsplash.com/photo-1464890100898-a385f744067f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="">
            <% end %>
            <div class="card-trip-infos">
              <div>
                <h2><%= link_to location.name, location_path(location), class: "stretched-link", style: "text-decoration: none; color: black" %></h2>
                <p><%= location.address %></p>
              </div>
              <h2 class="card-trip-pricing"><%= location.daily_fee %> â‚¬</h2>
            </div>
          </div>
        <% end %>
    </div>

    <div class="col-12 col-lg-6">
      <div id="map"
        class = "mt-3"
        style="width: 100%; height: 700px; position: sticky; top: 0;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

  </div>

</div>

