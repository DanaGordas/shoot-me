            <div>
              <h2> <%= link_to location.name, location_path(location) %></h2>
              <p><%= location.address %></p>
            </div>
            <h2 class="card-trip-pricing"><%= location.daily_fee %> â‚¬</h2>
          </div>
        </div>
      <% end  %>
