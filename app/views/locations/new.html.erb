<div class="container mt-3">
  <h1>New Location</h1>

  <%= simple_form_for(@location) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :daily_fee %>
      <%= f.input :style, collection: Location::TYPE  %>
      <%= f.button :submit, class: "btn btn-primary mt-3" %>
  <% end %>

  <%= link_to "Back", root_path, class: "btn btn-primary mt-3" %>

</div>
