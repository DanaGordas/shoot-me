<div class="container mb-5">
  <div class="row ml-5">

    <div class="col-12 col-lg-8">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item">
            <%= image_tag "https://images.unsplash.com/photo-1464890100898-a385f744067f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", class: "d-block w-100 pt-3" %>
          </div>
          <div class="carousel-item active">
            <%= image_tag "https://images.unsplash.com/photo-1529408632839-a54952c491e5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", class: "d-block w-100 pt-3" %>
          </div>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div class="col-12 col-lg-4 border rounded p-4 mt-3 ">
        <h2>Book this location</h2>
        <%= render "bookings/form", location: @location %>
        <%# form embedded %>
      </div>
    </div>

  </div>

  <div class = "row ml-5">
    <ul>
      <li><h1 class="my-4"><%= @location.name %></h1></li>
      <span class="border-bottom"></span>
      <li><p><%= @location.description %></p></li>
      <li><p><strong>Hosted by</strong> <%= @location.user.first_name %></p></li>
      <br>
      <li><p>Address:<%= @location.address %></p></li>
      <li><p>Price: <%= @location.daily_fee %> â‚¬/day</p></li>
      <li><%= link_to "Back", locations_path,  class: "btn btn-info"  %></li>
    </ul>
  </div>
</div>

