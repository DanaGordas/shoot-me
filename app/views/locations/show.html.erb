<div class="container mt-3">

  <div class="row">
    <div class="col-12 h-80">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% if @location.photos.attached? %>
            <div class="carousel-item">
              <%= cl_image_tag @location.photos[0].key, width: 700, height:600, crop: :scale, class: "d-block w-100 pt-3" %>
            </div>
            <div class="carousel-item active">
              <%= cl_image_tag @location.photos[1].key, width: 700, height:600, crop: :scale, class: "d-block w-100 pt-3" %>
            </div>
          <% else %>
            <div class="carousel-item">
              <%= image_tag "https://images.unsplash.com/photo-1464890100898-a385f744067f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", class: "d-block w-100 pt-3" %>
            </div>
            <div class="carousel-item active">
              <%= image_tag "https://images.unsplash.com/photo-1529408632839-a54952c491e5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", class: "d-block w-100 pt-3" %>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

    <div class ="row d-flex justify-content-between" style="margin-right: 0px">

    <div class="col-12 col-lg-7 pt-4">
        <h1 class ="mt-3 mb-3"><%= @location.name %></h1>

        <div class=" d-flex justify-content-between border-bottom border-body-color">
          <p><strong>Hosted by</strong> <%= @location.user.first_name %></p>
          <p><strong>Price:</strong> <%= @location.daily_fee %> â‚¬/day</p>
        </div>

        <p class="mt-3"><%= @location.description %></p>

        <div class="border-top border-body-color mb-3">
          <p class="mt-3"><strong>Address:</strong>  <%= @location.address %></p>
        </div>
        <%= link_to "Back", locations_path,  class: "btn btn-info mt-3"  %>
    </div>

    <div class="col-12 col-lg-4 border rounded p-4 mt-3">
      <h2>Book this location</h2>
      <%= render "bookings/form", location: @location %>
      <%# form embedded %>
    </div>

  </div>
</div>
